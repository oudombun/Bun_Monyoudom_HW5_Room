<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/d_book_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/placeholder_book"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/d_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_book_thumbnail"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:text="Title"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/d_book_cate"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_book_title"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:text="Category"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/d_book_page"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_book_cate"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:text="Page: 40"
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/d_book_price"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/d_book_page"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:paddingBottom="5sp"
            android:text="Price: "
            android:textColor="@android:color/darker_gray"
            android:textSize="17sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>